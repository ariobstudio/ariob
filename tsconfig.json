{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "packages/core/src/*"
      ],
      "@packages/*": [
        "packages/*/src"
      ],
      "@apps/*": [
        "apps/*/src"
      ],
      "@ariob/ui": [
        "packages/ui/src/index.ts"
      ],
      "@ariob/ui/*": [
        "packages/ui/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "apps/andromeda/vitest.config.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ]
}