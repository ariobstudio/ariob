# Hoist all dependencies to workspace root
hoist=true
hoist-pattern[]=*

# Ensure React is shared across workspace for Expo compatibility
public-hoist-pattern[]=(react|react-dom|react-native)

# Strict peer dependencies
auto-install-peers=true
strict-peer-dependencies=false

# For Expo compatibility
node-linker=hoisted

# Use overrides for consistent versions
