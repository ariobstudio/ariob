# Uncomment the next line to define a global platform for your project
source 'https://cdn.cocoapods.org/'

# Support iOS 10+ for CocoaPods dependencies
# MLX Swift packages (iOS 16+) are handled separately via SPM in Xcode
platform :ios, '10.0'

target 'Ariob' do
  # Use dynamic frameworks
  use_frameworks!

  pod 'Lynx', '3.4.1', :subspecs => [
      'Framework',
  ]

  pod 'PrimJS', '2.14.0-rc.1', :subspecs => ['quickjs', 'napi']

  # integrate image-service, log-service, and http-service
  pod 'LynxService', '3.4.1', :subspecs => [
      'Image',
      'Log',
      'Http',
  ]

  # ImageService
  pod 'SDWebImage','5.15.5'
  pod 'SDWebImageWebPCoder', '0.11.0'

  pod 'XElement', '3.4.1'

  # Note: MLX and Transformers are handled via Swift Package Manager in Xcode
  # This allows iOS 16+ ML features while keeping iOS 10+ compatibility for core functionality

  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # All CocoaPods dependencies use iOS 10.0
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '10.0'
        config.build_settings['ENABLE_BITCODE'] = 'NO'
        config.build_settings['SWIFT_VERSION'] = '5.5'
      end
    end
  end
end
