{
  "name": "ariob",
  "version": "1.0.0",
  "description": "Cross platform Decentralized Platform",
  "main": "index.js",
  "scripts": {
    "start": "pnpm run start:core && pnpm run start:web",
    "start:web": "pnpm --filter web install",
    "start:core": "pnpm --filter core install",
    "dev": "pnpm run dev:core",
    "dev:web": "pnpm --filter web run dev",
    "dev:core": "pnpm --filter core run dev",
    "dev:all": "pnpm run build:core && pnpm run dev:web",
    "build": "pnpm run build:core && pnpm run build:web && pnpm run copy:ios && pnpm run copy:android",
    "build:core": "pnpm --filter core run build",
    "build:web": "pnpm --filter web run build",
    "copy:ios": "cp ./packages/core/dist/main.lynx.bundle ./packages/ios/Ariob/",
    "copy:android": "cp ./packages/core/dist/main.lynx.bundle ./packages/android/app/src/main/assets/",
    "clean": " pnpm run clean:core && pnpm run clean:web && pnpm run clean:ios && pnpm run clean:android",
    "clean:core": "pnpm --filter core run clean",
    "clean:web": "pnpm --filter web run clean",
    "clean:android": "rm -rf ./packages/android/app/src/main/assets/main.lynx.bundle",
    "clean:ios": "rm -rf ./packages/ios/Ariob/main.lynx.bundle",
    "relay": "node ./packages/core/gun/examples/http.js ",
    "test": "pnpm run test:web && pnpm run test:core",
    "test:web": "pnpm --filter web run test",
    "test:core": "pnpm --filter core run test"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "react-router": "6"
  }
}
