{
  "name": "ariob",
  "version": "1.0.0",
  "description": "Cross platform Decentralized Platform",
  "main": "index.js",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "platforms/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "relay": "pnpm run --filter=relay start",
    "android": "cd apps/ripple && npx expo run:android",
    "ios": "cd apps/ripple && npx expo run:ios"
  },
  "packageManager": "pnpm@10.20.0",
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "zod": "^3.24.4",
      "zustand": "^5.0.4"
    }
  },
  "devDependencies": {
    "turbo": "^2.5.2"
  },
  "dependencies": {
    "expo": "~54.0.23",
    "react": "19.1.0",
    "react-native": "0.81.5"
  }
}
