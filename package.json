{
  "name": "ariob",
  "version": "1.0.0",
  "description": "Ariob - Decentralized Platform",
  "main": "index.js",
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "server/*"
  ],
  "scripts": {
    "install": "turbo run install",
    "build": "turbo run build",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "test": "jest",
    "dev:web": "cd apps/ariob && pnpm run dev:web",
    "dev:android": "cd apps/ariob && pnpm run dev:android",
    "dev:ios": "cd apps/ariob && pnpm run dev:ios",
    "build:apps": "turbo run build --filter=apps/**",
    "build:packages": "turbo run build --filter=packages/**",
    "start:relay": "node server/gun/examples/http.js"
  },
  "engines": {
    "node": ">=18"
  }
}
