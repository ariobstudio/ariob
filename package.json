{
  "name": "ariob",
  "version": "1.0.0",
  "description": "Cross platform Decentralized Platform",
  "main": "index.js",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "platforms/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:brana": "turbo run dev --filter=brana",
    "dev:chat": "turbo run dev --filter=chat",
    "build": "turbo run build",
    "build:brana": "turbo run build --filter=brana",
    "build:chat": "turbo run build --filter=chat",
    "bundle:ios": "./scripts/bundle-ios.sh",
    "bundle:ios:help": "./scripts/bundle-ios.sh --help",
    "bundle:android": "./scripts/bundle-android.sh",
    "relay": "pnpm run --filter=relay start"
  },
  "packageManager": "pnpm@10.20.0",
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "zod": "^3.24.4",
      "zustand": "^5.0.4"
    }
  },
  "devDependencies": {
    "turbo": "^2.5.2"
  }
}
