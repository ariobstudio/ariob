{
  "name": "@core/gun/schema",
  "version": "1.0.0",
  "description": "Core data schemas, type definitions, and error handling for Gun.js integration",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "import": "./index.ts",
      "require": "./index.ts",
      "types": "./index.ts"
    },
    "./errors": {
      "import": "./errors.ts",
      "require": "./errors.ts",
      "types": "./errors.ts"
    },
    "./thing": {
      "import": "./thing.schema.ts",
      "require": "./thing.schema.ts",
      "types": "./thing.schema.ts"
    },
    "./who": {
      "import": "./who.schema.ts",
      "require": "./who.schema.ts",
      "types": "./who.schema.ts"
    }
  },
  "files": [
    "*.ts",
    "README.md"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
