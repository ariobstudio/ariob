{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@lynx-js/react",

    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "esnext",
    "moduleResolution": "bundler",

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["assets/*"],
      "@ariob/ai": ["../../packages/ai/index.ts"],
      "@ariob/ui": ["../../packages/ui/src/index.ts"],
      "@ariob/ui/*": ["../../packages/ui/src/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "src/**/*",
    "../../packages/ui/typing.d.ts"
  ],
  "exclude": ["dist/"]
}


